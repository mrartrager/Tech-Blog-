<head><title>The Dashboard</title></head>
<body>
    <section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
   <article class="post">
       <div class="post-content">
           <h2>{{post.title}}</h2>
           <p>{{post.content}}</p>
       </div class="created-data">
       {{user.username}} on {{format_date created_at}}
       </div>
       </div>
       <div class="content">
           <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
       </div>
       <span> <a href="/dashboard/edit/{{post.id}}" class="editPost">Edit Post </a></span>
   </article>
    {{/each}}
</section>
<p> No Posts to Display</p>
{{/if}}

<a class="newAnchor" href="/dashboard/new"><button class ="new-post-btn">New Post</button></a>
<script src="/javascript/addPost.js"></script>
</body>
